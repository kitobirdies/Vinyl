@page "/records"

<h3>Vinyl Records Collection</h3>

@foreach (var record in VinylRecords!)
{
    <div class="record-card">
        <h4>@record.Title</h4>
        <p>Artist: @record.Artist</p>
        <p>Release Year: @record.ReleaseYear</p>
    </div>
}

@code {
    private List<VinylRecord>? VinylRecords { get; set; }

    protected override void OnInitialized()
    {
        // Simulated data for illustration purposes
        VinylRecords = new List<VinylRecord>
        {
            new VinylRecord { Title = "Album 1", Artist = "Artist A", ReleaseYear = 1980 },
            new VinylRecord { Title = "Album 2", Artist = "Artist B", ReleaseYear = 1995 },
            // Add more records as needed
        };
    }

    private class VinylRecord
    {
        public string? Title { get; set; }
        public string? Artist { get; set; }
        public int ReleaseYear { get; set; }
    }
}
